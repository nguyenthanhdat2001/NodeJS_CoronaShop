<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shoping Cart
        </span>
    </div>
</div>


<!-- Shoping Cart -->
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
                <div class="wrap-table-shopping-cart">
                    <table class="table-shopping-cart">
                        <tr class="table_head">
                            <th class="column-1">Product</th>
                            <th class="column-2"></th>
                            <th class="column-3">Price</th>
                            <th class="column-4">Quantity</th>
                            <th class="column-5">Total</th>
                        </tr>
                        <form action="/shopping-cart/update" name="update_form" method="post">
                            {{#each cartItem}}
                            <tr class="table_row">
                                <td class="column-1">
                                    <div class="how-itemcart1 btn_remove" data-id="{{this._id}}">
                                        <img src="{{this.productID.image}}" alt="{{this.productID.name}}">
                                    </div>
                                </td>
                                <td class="column-2">
                                    <a href="/products/{{this.productID.slug}}">{{this.productID.name}}</a>
                                    <br>Size: {{this.size}}
                                    <br>Color: {{this.color}}
                                </td>
                                <td class="column-3">$ {{this.productID.price}}</td>
                                <td class="column-4">
                                    <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl3 txt-center num-product" type="number"
                                            name="quantity" value="{{this.quantity}}">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>
                                </td>
                                <td class="column-5">$ {{multiplication this.productID.price this.quantity}}</td>
                            </tr>
                            {{else}}
                            <tr class="table_row">
                                <td colspan="5" class="text-center">
                                    <div class="flex-c-m flex-w w-full p-t-45">
                                        <a href="/"
                                            class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                                            Go home
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </form>
                    </table>
                </div>

                <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                    <div class="flex-w flex-m m-r-20 m-tb-5">
                        <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon"
                            placeholder="Coupon Code">

                        <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                            Apply coupon
                        </div>
                    </div>

                    <button id="btn_update"
                        class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                        Update Cart
                    </button>
                </div>
            </div>
        </div>

        <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
            <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                <form action="/shopping-cart/checkout" method="post" name="checkout_form">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Cart Totals
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Subtotal:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                $ {{cart.total_price}}
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Shipping:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            <p class="stext-111 cl6 p-t-2">
                                There are no shipping methods available. Please double check your address, or contact us
                                if you need any help.
                            </p>

                            <div class="p-t-15">
                                <span class="stext-112 cl8">
                                    Location Shipping
                                </span>
                                <input type="hidden" name="customer" value="{{userCart._id}}">
                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="customer_name" placeholder="Tên người nhận">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="city"
                                        placeholder="Thành phố / tỉnh">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="district"
                                        placeholder="Quận / Huyện">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="wards"
                                        placeholder="Phường / Xã">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="tel" name="phone_number"
                                        placeholder="Phone_number">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <textarea style="height: 100px;" class="stext-111 cl8 plh3 size-111 p-lr-15"
                                        name="address" placeholder="Số nhà, đường, văn phòng,..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Total:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2" >
                                $ <span id="total_price">{{cart.total_price}}</span>
                                <input type="hidden" name="total_price" value="{{cart.total_price}}">
                            </span>
                        </div>
                    </div>

                    <button type="submit" id="btn_checkout"
                        class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                        Proceed to Checkout
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>




<form method="post" name="cartItemRemove"></form>

<script>
    const removeForm = document.forms['cartItemRemove']
    const btnRemoves = document.querySelectorAll('.btn_remove')
    const btnUpdate = document.getElementById('btn_update')
    const updateForm = document.forms['update_form']
    const checkOutForm = document.forms['btn_checkout']
    const btnCheckOut = document.getElementById('btn_checkout')
    const totalPrice = document.getElementById('total_price')

    btnRemoves.forEach(btnRemove => {
        btnRemove.onclick = function (e) {
            const idDelete = e.target.dataset.id
            removeForm.action = '/shopping-cart/' + idDelete + '/remove'
            removeForm.submit()
        }
    })

    btnUpdate.onclick = function () {
        updateForm.submit()
    }

</script>