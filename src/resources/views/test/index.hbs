<div class="mt-4">
    <a href="/products/trash">Thùng rác [{{deletedProduct}}]</a>
    <div class="row">
        <div class="col card-group">
            {{#each products}}
            <div class="card card_item">
                <a href="/products/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/products/{{this.slug}}">
                        <h5 class="card-title">{{sum @index 1}}- {{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.brand}}</p>
                    <p class="text-danger">{{this.price}}</p>
                </div>
                <div class="card-footer">
                    <a href="/products/{{this._id}}/edit" class="btn btn-warning">Sửa</a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirm"
                        data-bs-id="{{this._id}}">Xóa</button>
                </div>
            </div>
            {{else}}
            <h3>Chưa có sản phẩm nào nào <a class="btn btn-success" href="/products/create">Đăng mới</a></h3>
            {{/each}}
        </div>
    </div>
</div>

{{!-- delete confirm --}}
<div class="modal" id="deleteConfirm" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Chuyển sản phẩm vào thùng rác</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnDelete" class="btn btn-danger">Xóa</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

{{!-- delete hidden form --}}
<form method="post" name="remove-product"></form>

<script>
    const ID = document.getElementById('deleteConfirm');
    var id;
    const deleteProduct = document.getElementById('btnDelete');
    const removeProduct = document.forms['remove-product']

    ID.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        id = button.getAttribute('data-bs-id');
    })

    deleteProduct.onclick = function () {
        removeProduct.action = "/products/" + id + "?_method=DELETE";
        removeProduct.submit()
    }
</script>